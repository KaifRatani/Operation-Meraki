// api/re-engage.js
const { Pool } = require('pg');

const pool = new Pool({
  connectionString: 'postgresql://merakiAdmin:root1Admin@operationmeraki-server1.postgres.database.azure.com:5432/operationmeraki-database?sslmode=require',
  ssl: { rejectUnauthorized: false }
});

module.exports = async (req, res) => {
  if (req.method !== 'POST') {
    return res.status(405).json({ message: 'Method Not Allowed' });
  }

  const {
    helpAreas,
    comments,
    permissionToContact
  } = req.body;

  try {
    const result = await pool.query(
      `INSERT INTO reengage_program (help_areas, comments, permissiontocontact)
       VALUES ($1, $2, $3) RETURNING id`,
      [
        JSON.stringify(helpAreas), // ensure it's stored as array
        comments || '',
        permissionToContact === true
      ]
    );

    res.status(200).json({ message: 'Saved!', id: result.rows[0].id });
  } catch (err) {
    console.error('‚ùå DB Insert Error:', err);
    res.status(500).json({ message: 'Server error' });
  }
};
